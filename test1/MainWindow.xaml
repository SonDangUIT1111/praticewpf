<Window x:Class="practicetest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practicetest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Transparent" WindowStyle="None"
        AllowsTransparency="True">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1" Background="LawnGreen" Panel.ZIndex="2"
                          ResizeDirection="Auto" HorizontalAlignment="Stretch"
                          />
            <Border CornerRadius="20" BorderBrush="Black" Grid.ColumnSpan="3" >
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="Aqua" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
    </Grid>
</Window>

